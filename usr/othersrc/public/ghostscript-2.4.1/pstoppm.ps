  /Horz_dpi 72 def		% defaults to screen density
  /Vert_dpi 72 def

  /OutFilePrefix () def		% default to null (current directory)

  /FirstPageNumber 1 def	% any non-negative integer is OK

  /Palette1 <ff 00> def
  /Palette8
