SHELL = /bin/sh

srcdir = @srcdir@/man
@VPATH@

MANFILES = chgrp.1 chown.1 chmod.1 cp.1 dd.1 df.1 du.1 install.1 \
ln.1 ls.1 mkdir.1 mkfifo.1 mknod.1 mv.1 rm.1 rmdir.1 touch.1 

DISTFILES = Makefile.in $(MANFILES)

all:
.PHONY: all

install: all
	for f in $(MANFILES); do \
	if test -f $$f; then src=.; else src=$(srcdir); fi; \
	../src/ginstall -m 644 $$src/$$f \
	$(mandir)/$(manprefix)`basename $$f 1`$(manext); done
.PHONY: install

tags:
.PHONY: tags

TAGS:
.PHONY: TAGS

mostlyclean:
.PHONY: mostlyclean

clean: mostlyclean
	rm -f Makefile
.PHONY: clean

realclean: clean
.PHONY: realclean

dist:
	ln $(DISTFILES) ../`cat ../.fname`/man
.PHONY: dist
