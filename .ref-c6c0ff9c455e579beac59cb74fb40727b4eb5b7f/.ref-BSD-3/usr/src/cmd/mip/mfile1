# define ENAME 15
# define MOE 16
# define UFORTRAN 17
# define USTATIC 18
	/* field size is ORed in */
# define FIELD 0100
# define FLDSIZ 077
extern char *scnames();

/*	location counters */
# define PROG 0
# define DATA 1
# define ADATA 2
# define STRNG 3
