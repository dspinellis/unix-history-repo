#!/bin/sh -
#
# Copyright (c) 1992 The Regents of the University of California.
# All rights reserved.
#
# %sccs.include.redist.sh%
#
#	@(#)buildmini	7.2 (Berkeley) %G%
#

dist=/sys/pmax/dist
miniroot=rz1b
minimnt=/tmp/mini

date
mkdir ${minimnt}
umount /dev/${miniroot}
newfs -s 10240 ${miniroot}
fsck /dev/r${miniroot}
mount /dev/${miniroot} ${minimnt}
cd ${minimnt}; sh ${dist}/get
cd ${dist}; sync
umount /dev/${miniroot}
fsck /dev/r${miniroot}
date
