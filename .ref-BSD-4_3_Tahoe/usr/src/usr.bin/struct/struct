#! /bin/sh
#
#	@(#)struct	4.2	(Berkeley)	83/12/19
#
trap "rm -f /tmp/struct*$$" 0 1 2 3 13 15
files=no
for i
do
	case $i in
	-*)	;;
	*)	files=yes
	esac
done

case $files in
yes)
	/usr/lib/struct/structure $* >/tmp/struct$$
	;;
no)
	cat >/tmp/structin$$
	/usr/lib/struct/structure /tmp/structin$$ $* >/tmp/struct$$
esac &&
	/usr/lib/struct/beautify</tmp/struct$$
